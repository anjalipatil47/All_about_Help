<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/Faq_details_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView

        android:id="@+id/Faq_details_card_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_quiz_24"
        android:drawablePadding="15dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_details_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/feedback_details_card_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_feedback_24"
        android:drawablePadding="15dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_details_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/chat_details_card_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24/7 Chat"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_chat_24"
        android:drawablePadding="15dp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sotre_details_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sotre_details_card_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Retail Store"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="15dp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/queries_details_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/queries_details_card_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="call 9999999999 for any queries."
        android:gravity="center"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="15dp"
        />
    </LinearLayout>
</LinearLayout>